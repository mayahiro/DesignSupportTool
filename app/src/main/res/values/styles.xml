<resources>

    <!-- Base application theme. -->
    <style name="DesignSupportTool.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlHighlight">@color/touch_feedback_background</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>

    <style name="DesignSupportTool" parent="DesignSupportTool.Base">
        <item name="android:selectableItemBackground">@drawable/pre_lollipop_selectable_item</item>
    </style>

    <!-- The toolbar theme. -->
    <style name="DesignSupportTool.Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#f5f5f5</item>
    </style>

    <!-- The toolbar text size. -->
    <style name="DesignSupportTool.Toolbar.TitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
